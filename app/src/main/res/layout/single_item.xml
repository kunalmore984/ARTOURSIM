<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/namelayout">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/train_No."
            android:text="Train No: 12345"
            android:textColor="@color/purple_500"
            android:textSize="20sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/train_from."
            android:text="from: mumbai"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:paddingLeft="20dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/train_to."
            android:text="to: Delhi"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:paddingLeft="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/timelayout"
        android:gravity="center">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/train_time."
            android:text="time: 7:00:00"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:paddingLeft="20dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/train_depature."
            android:text="time: 7:00:00"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

</LinearLayout>