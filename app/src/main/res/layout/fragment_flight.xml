<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".FlightFragment"    android:orientation="vertical">    <LinearLayout        android:id="@+id/InfoLayoutf"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <EditText            android:id="@+id/depaturenamef"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="20dp"            android:hint=" enter depature city"            android:textColorHint="#fff"            android:elevation="10dp"            android:translationZ="5dp"            android:textColor="#FFFFFF"/>        <EditText            android:id="@+id/arrivalcityf"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="20dp"            android:textColorHint="#fff"            android:textColor="#FFFFFF"            android:elevation="10dp"            android:translationZ="5dp"            android:hint=" enter arrival city"/>    </LinearLayout>    <Button        android:id="@+id/gobtnf"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textColor="#040303"        android:background="#eaafc8"        android:elevation="10dp"        android:translationZ="5dp"        android:layout_gravity="center"        android:layout_marginTop="10dp"        android:text="go"/>    <ListView        android:id="@+id/Flightslistf"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:divider="@android:color/transparent"        android:dividerHeight="15.0sp"/></LinearLayout>