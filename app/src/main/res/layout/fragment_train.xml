<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".TrainFragment"    android:orientation="vertical"    android:background="@drawable/gradient_back">    <EditText        android:id="@+id/searchstnf"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="@string/enter_station"/>    <Button        android:id="@+id/submitf"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="submit"        android:layout_gravity="center"        android:textColor="#040303"        android:background="#eaafc8"        android:elevation="10dp"        android:translationZ="5dp"        android:layout_marginTop="10dp"        android:shadowRadius="2"        />    <Spinner        android:id="@+id/Place_spinnerf"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"/>    <LinearLayout        android:id="@+id/listfragf"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp">        <ListView            android:id="@+id/listtrainf"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginTop="10dp"            android:divider="@android:color/transparent"            android:dividerHeight="15.0sp"/>    </LinearLayout></LinearLayout>