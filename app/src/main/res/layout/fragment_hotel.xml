<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".HotelFragment"    android:orientation="vertical"    android:background="@drawable/gradient_back">    <EditText        android:id="@+id/searchlocf"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:hint="Search Location"        android:textColorHint="#fff"        android:elevation="10dp"        android:translationZ="5dp"        android:textColor="#FFFFFF"        android:layout_gravity="center"/>    <Button        android:id="@+id/subitbtnf"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Submit"        android:textColor="#040303"        android:background="#eaafc8"        android:elevation="10dp"        android:translationZ="5dp"        android:layout_marginTop="10dp"        android:layout_gravity="center"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <ListView            android:id="@+id/hotelsidf"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:padding="10dp"            android:layout_marginTop="20dp"            android:divider="@android:color/transparent"            android:dividerHeight="15.0sp"/>    </LinearLayout></LinearLayout>